<div class="post">
  <div class="post_head">
    <div class="post_date"><%= article.published_at.strftime('%B %d, %Y') %></div>
    <h2><%= link_to article.title, article_path_by_date(article) %></h2>
    <div class="post_metadata">
      <div class="post_tags">Tags: <%= raw article.tags.map{|tag| link_to tag.name, tag_path(tag.name.gsub('.', '_').parameterize) }.join(', ') %></div>
      <div class="post_comments"><%= link_to pluralize(article.comments.size, 'Comment'), "#{article_path(article)}#comments" %></div>
    </div>
  </div>
  <% if current_page?(article_path_by_date(article)) %>
    <script src="//platform.twitter.com/widgets.js" type="text/javascript"></script>
    <p>
      <a href="https://twitter.com/share" class="twitter-share-button"
        data-via="HatemMahmoud"
        data-text="<%= article.title %>"
        data-count="horizontal">Tweet</a>
    </p>
  <% end %>
  <p class="excerpt"><%= article.summary.html_safe %></p>
  <% if current_page?(article_path_by_date(article)) %>
    <%= article.content.html_safe %>
  <% else %>
    <p class="read_more"><%= link_to 'Read more...', article_path_by_date(article) %></p>
  <% end %>
</div>